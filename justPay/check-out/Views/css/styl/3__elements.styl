c-primary=#3775BA
.body
  max-width 1200px
  margin auto
  background-color #E4E4E4
.header
  background-color #222222
  padding 10px
  .logo
    padding 10px
    img
      width 350px
.price
  background-color #fff
  padding 0
  box-shadow 0 1px 4px 0 rgba(0, 0, 0, 0.14)
  border-radius 4px
  height 100%
  .item
    display flex
    justify-content space-between
    padding 20px 15px
    border-bottom 1px solid #ccc
    p
      color c-primary
    &.title
      text-align center
      display block
      color c-primary
      border-bottom 1px solid c-primary
      @media screen and (max-width 768px)
        font-size 18px      
    &.total
      background-color #3775BA
      font-size 20px
      padding 15px
      p
        color #fff
.media
  align-items center
  background-color #fff
  padding 10px
  box-shadow 0 1px 4px 0 rgba(0, 0, 0, 0.14)
  text-align center
  color c-primary
  border-radius 4px
  .title
    padding 15px 0
    width 100%
    color c-primary
    @media screen and (max-width 768px)
        font-size 19px
  .ed-item
    padding 20px
  @media screen and (max-width 768px)
    margin-top 15px
  img
    width 100%
    @media screen and (max-width 768px)
      width 70%
  a
    transition all .3s
    &:hover
      border 2px solid #ccc
      cursor pointer
.margin-top
  margin-top 50px
  padding 0 !important
  justify-content space-around
  @media screen and (max-width 768px)
    padding 15px !important
    margin-top 5px
.button
  margin 10px 0
  display block
  &.cancelar
    padding 10px 15px
    transition all .3s
    color c-primary
    color rgba(#000,.7)
    color #F85959
    @media screen and (max-width 768px)
        text-align center
    &:hover
      text-decoration underline